{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*", "./server.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
